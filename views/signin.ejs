<% include header.ejs %>
<form class="form-horizontal" method="post">
	<fieldset>
		<legend>用户登入</legend>
		<div class="control-group">
			<label class="control-label" for="loginName">用户名</label>
			<div class="controls">
				<input type="text" class="input-xlarge" id="loginName" name="loginName"></div>
		</div>
		<div class="control-group">
			<label class="control-label" for="password">口令</label>
			<div class="controls">
				<input type="password" class="input-xlarge" id="password" name="password"></div>
		</div>
		<div class="form-actions">
			<button type="submit" class="btn btn-primary">登入</button>
			<button type="reset" class="btn btn-primary">重置</button>
		</div>
	</fieldset>
</form>
